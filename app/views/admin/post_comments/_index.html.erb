
<h4 class="heading-title">
  <%= "#{@end_user.family_name} #{@end_user.first_name}(#{@end_user.nickname})" %>さんの投稿コメント一覧
  (<%= @end_user.post_comments.count %>件)
</h4>
<table class="table mt-3">
  <tr>
    <th class="col-2">作成日</th>
    <th class="col-9">コメント</th>
    <th class="col-1"></th>
  </tr>
<% @end_user.post_comments.order(created_at: :desc).each do |post_comment| %>
  <tr>
    <td class="col-2"><%= post_comment.created_at.strftime('%Y/%m/%d') %></td>
    <td class="col-9"><%= post_comment.comment %></td>
    <td class="col-1">
      <%= link_to '削除', admin_post_comment_path(post_comment), method: :delete, data: { confirm: '本当に削除しますか?' },class: "btn btn-sm btn-danger" %>
    </td>
  </tr>
<% end %>
</table>
