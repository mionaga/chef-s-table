<div class="container mt-5">
  <div class="row" style="margin-bottom: 20px;">
    <h3>投稿コメント一覧</h3>
<table class="table mt-3">
  <tr>
    <th class="col-2">名前</th>
    <th class="col-8">コメント</th>
    <th class="col-1">作成日</th>
    <th class="col-1"></th>
  </tr>
<% @post_comments.each do |post_comment| %>
  <tr>
    <td class="col-2">
      <%= link_to admin_end_user_path(post_comment.end_user_id) do %>
        <%= @end_users.find(post_comment.end_user_id).nickname %>
      <% end %>
    </td>
    <td class="col-8">
      <%= link_to admin_recipe_path(post_comment.recipe_id) do %>
        <%= post_comment.comment %>
      <% end %>
    </td>
    <td class="col-1"><%= post_comment.created_at.strftime('%Y/%m/%d') %></td>
    <td class="col-1">
    <%= link_to '削除', admin_post_comment_path(post_comment), method: :delete, data: { confirm: '本当に削除しますか?' },class: "btn btn-sm btn-danger" %>
    </td>
  </tr>
<% end %>
</table>
</div>

<div class="row justify-content-center" style="margin-bottom: 20px;">
  <%= paginate @post_comments %>
</div>
</div>