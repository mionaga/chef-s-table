<div class="containe-fluid">
  <div class="row">
        <div class="col-md-6 text-center">

          <div class="row" style="margin-left: 15px;">
            <div class="col">
               <h4 class="heading-title"><%= "#{@end_user.family_name} #{@end_user.first_name}(#{@end_user.nickname})" %>さんのページ</h4>
            </div>
            <div class="col">
              <%= link_to "編集画面へ", edit_admin_end_user_path(@end_user), class: "btn", style: "margin-top: 6px; background-color: #3e687d; color: #ffffff" %>
            </div>
          </div>

        </div>

      </div>
  <div class="row">
    <div class="col-md-6 text-center">


      <div class="row">

      </div>



      <div class="row">
        <table class="table table-hover table-inverse" style="margin-top: 10px;" >
          <tr>
            <th>
              <div class="col">
                <%= image_tag @end_user.get_profile_image(200, 200) %>
              </div>
            </th>
            <th>会員ID:<%= @end_user.id %></th>
          </tr>
          <tr>
            <th>氏名</th>
            <td><%= @end_user.family_name %>&ensp;<%= @end_user.first_name %></td>
          </tr>
          <tr>
            <th>メールアドレス</th>
            <td><%= @end_user.email %></td>
          </tr>
          <tr>
            <th>ステータス</th>
            <td>
              <% if @end_user.is_deleted == true %>
               <strong style="color:darkgray;">退会</strong>
              <% else %>
                <strong style="color:green;">有効</strong>
              <% end %>
            </td>
          </tr>
          <tr>
            <th>専門料理</th>
            <td><%= @end_user.specialty %></td>
          </tr>
          <tr>
            <th>経歴</th>
            <td><%= @end_user.career_intro %></td>
          </tr>
          <tr>
            <th>自己紹介</th>
            <td><%= @end_user.bio %></td>
          </tr>

        </table>
      </div>

    </div>
  <div class="col-md-5 text-center">
  <div class="row">
    <% @recipes.each do |recipe| %>
      <div class="col-md-12 mb-4">
        <div class="card custom-card shadow-lg">
          <div class="row g-0">
            <div class="col-md-4">
              <%= link_to recipe_path(recipe) do %>
                <%= image_tag recipe.get_photo(50, 50), class: "card-img"; %>
              <% end %>
            </div>
            <div class="col-md-8">
              <div class="card-body">
                <h5 class="card-title">
                  <%= link_to recipe_path(recipe.id) do %>
                    <%= recipe.title %>
                  <% end %>
                </h5>
                <p class="card-text">
                  タイトル：<br>
                  <%= link_to recipe_path(recipe.id) do %>
                    <%= recipe.title %>
                  <% end %>
                </p>
                <p><%= "#{recipe.favorites.count}" %> 個のいいね</p>
                <p><%= link_to "#{recipe.post_comments.count} コメント", recipe_path(recipe.id) %></p>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
  

  
  </div>
</div>


