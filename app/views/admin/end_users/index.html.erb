<div class= 'container'>
 <div class="col-md-10 mx-auto mt-5">

  <div class="row justify-content-center">
   <div class="col-md-4 headline">
   <h4 class="heading-title">会員一覧</h4>
   </div>
  </div>

  　<table class ="table table-bordered border-dark table-hover align-middle custom-table">
      <thead class ="table-head" style="background-color:#6ea7a1;">
        <tr align="center">
         <th scope="col" style="width: 10%">会員ID</th>
         <th scope="col" style="width: 30%">氏名</th>
         <th scope="col" style="width: 40%">メールアドレス</th>
         <th scope="col" style="width: 20%">ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @end_users.each do |end_user|%>
        <tr align="center">
          <td><%= end_user.id %></td>
          <td>
            <%= link_to admin_end_user_path(end_user.id), class:"admin_link" do  %>
              <%= "#{end_user.family_name} #{end_user.first_name}" %>
            <% end %>
          </td>
          <td><%= end_user.email %></td>
          <td>
            <% if end_user.is_deleted == true %>
              <strong style="color:darkgray;">退会</strong>
            <% else %>
              <strong style="color:green;">有効</strong>
            <% end %>
          </td>
        <% end %>
      </table>

   <div class="d-flex justify-content-center mt-4">
    <%= paginate @end_users %>
   </div>

 </div>
</div>
