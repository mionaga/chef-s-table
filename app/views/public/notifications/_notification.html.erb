<ul>
  <% if notification.action == "post_comment" %>

    <li>
      <%= link_to end_user_path(notification.visiter) do %>
        <strong><%= notification.visiter.nickname %></strong>
      <% end %>さんがあなたの投稿レシピ
      <strong><%= link_to recipe_post_comments_path(notification.recipe) do %>
                <%= notification.recipe.title.truncate(20) %>
              <% end %>
      </strong>
      にコメントしました。
      <%= " (#{time_ago_in_words(notification.created_at)}前)" %>
    </li>

  <% else %>

    <li>
      <%= link_to end_user_path(notification.visiter) do %>
        <strong><%= notification.visiter.nickname %></strong>
      <% end %>さんがあなたの
      <strong><%= link_to recipe_post_comments_path(notification.recipe) do %>
                <%= notification.recipe.title.truncate(20) %>
              <% end %>
      </strong>
      のコメントに返信しました。
      <%= " (#{time_ago_in_words(notification.created_at)}前)" %>
    </li>

  <% end %>
</ul>