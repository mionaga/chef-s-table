<% recipe.post_comments.each do |post_comment| %>
  <div class="comment-box">
     <%= link_to end_user_path(post_comment.end_user) do %>
       <%= image_tag post_comment.end_user.get_profile_image(30,30) %><br>
       <%= post_comment.end_user.nickname %>
     <% end %>
     (
     <%= post_comment.created_at.strftime('%Y/%m/%d') %>
     )
     <%= post_comment.comment %>
     <% if post_comment.end_user == current_end_user %>
       <%= button_to "削除", recipe_post_comment_path(post_comment.recipe, post_comment), method: :delete, remote:true, data: {"turbolinks" => false} %>
     <% end %>
  </div>
<% end %>