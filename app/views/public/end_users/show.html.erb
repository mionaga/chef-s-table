<% if flash[:notice] %>
  <div class="alert alert-success" role="alert">
  <p class="notice text-center" style="color:green;"><%= flash[:notice] %></p></div>
<% end %>

<div class="container">
  <div class="row">
    <div class="col-md-6 text-center">

      <div class="row">
         <div class="col">
          <%= image_tag @end_user.get_profile_image(100, 100) %>
        </div>


        <div class="col">
          <h4 class="heading-title"><%= @end_user.nickname %>さんのページ</h4>
          <% if @end_user == current_end_user && !@end_user.guest_user? %>
            <%= link_to "プロフィール編集", edit_end_user_path(@end_user), class: "btn", style: "margin-top: 6px; background-color: #b9d0b1; color: #ffffff" %>
          <% end %>
        </div>
      </div>

      <div class="row">
        <table class="table table-hover table-inverse" style="margin-top: 10px;" >
          <tr>
            <th></th>
            <th>登録情報</th>
          </tr>
          <% if @end_user == current_end_user %>
            <tr>
              <th>氏名</th>
              <td><%= @end_user.family_name %>&ensp;<%= @end_user.first_name %></td>
            </tr>
          <% end %>
           <tr>
            <th>ニックネーム</th>
            <td><%= @end_user.nickname %></td>
          </tr>
          <tr>
            <th>専門料理</th>
            <td><%= @end_user.specialty %></td>
          </tr>
          <tr>
            <th>経歴</th>
            <td><%= @end_user.career_intro %></td>
          </tr>
          <tr>
            <th>自己紹介</th>
            <td><%= @end_user.bio %></td>
          </tr>
        </table>
      </div>

    </div>
  <div class="col-md-5 text-center">
  <div class="row">
    <% @recipes.each do |recipe| %>
      <div class="col-md-12 mb-4">
        <div class="card custom-card shadow-lg">
          <div class="row g-0">
            <div class="col-md-4">
              <%= link_to recipe_path(recipe) do %>
                <%= image_tag recipe.get_photo(100, 100), class: "card-img"; %>
              <% end %>
            </div>
            <div class="col-md-8">
              <div class="card-body">
                <h5 class="card-title">
                  <%= link_to recipe_path(recipe.id) do %>
                    <%= recipe.title %>
                  <% end %>
                </h5>
                <p class="card-text">
                 <%= "#{recipe.favorites.count}" %> 個のいいね</p>
                <p><%= link_to "#{recipe.post_comments.count} コメント", recipe_path(recipe.id) %></p>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <div class="row justify-content-center">
      <%= paginate @recipes %>
  </div>

</div>

  </div>
</div>
