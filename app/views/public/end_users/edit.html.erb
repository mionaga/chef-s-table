<% if flash[:alert] %>
  <div class="alert alert-danger" role="alert">
  <p class="notice text-center" style="color:blue;"><%= flash[:alert] %></p></div>
<% end %>

<div class="container">
  <div class="row justify-content-center" style="margin-top: 20px;">
    <div class="col-8">
       <h2 class="heading-title">プロフィール編集</h2>
    </div>
    <div class="col-4">
      <% if end_user_signed_in? && @end_user.id == current_end_user.id %>
		    <%= link_to "退会", check_path(current_end_user), method: :get, class: "btn btn-outline-danger" %>
      <% end %>
    </div>
  </div>
  <div class="row justify-content-center">

    <%= render 'form', end_user: @end_user %>

  </div>
</div>

