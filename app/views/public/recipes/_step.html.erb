
<div class="description-field form-group">
  <%= f.hidden_field :_destroy %>
  <div class="form-group">
    <%= f.label :descriptions, raw("ステップ" + content_tag(:span, "(必須)", class: "required-label")) %>
    <div class="input-group">
      <%= f.text_area :description, class: "form-control", rows: "2" %>
      <div class="input-group-append">
        <button type="button" class="btn btn-danger remove-description mb-3">
          <i class="fas fa-trash-alt"></i>
        </button>
      </div>
    </div>
  </div>
</div>


<script data-turbolinks="false">
  $(document).ready(function(){
    $(document).on('click', '.remove-description', function(){
      //削除ボタンがクリックされたときの処理
      $(this).closest('.description-field').find("input[name$='[_destroy]']").val('true');
      //クリックされた削除ボタンに最も近いdescription-fieldにある_destroyフィールドをtrueに設定
      $(this).closest('.description-field').hide();
      //そのフィールドを隠す
    });
  });
</script>